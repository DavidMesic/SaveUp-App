<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SaveUpApp"
    x:Class="SaveUpApp.AboutUsPage"
    Title="About Us"
    BackgroundColor="#f5f5f5">

    <VerticalStackLayout 
        Padding="30"
        Spacing="20"
        VerticalOptions="Center"
        HorizontalOptions="Center">

        <Label 
            Text="Über die SaveUp-App"
            FontSize="28"
            FontAttributes="Bold"
            HorizontalOptions="Center"
            TextColor="#333333" />

        <BoxView 
            HeightRequest="2" 
            WidthRequest="150" 
            BackgroundColor="#007BFF"
            HorizontalOptions="Center" />

        <Label 
            Text="Version: 1.0.0"
            FontSize="18"
            TextColor="#555555"
            HorizontalOptions="Center" />

        <Label 
            Text="Erstell-Datum: 19. Januar 2025"
            FontSize="18"
            TextColor="#555555"
            HorizontalOptions="Center" />

        <Label 
            Text="Hersteller: SaveUp Team"
            FontSize="18"
            TextColor="#555555"
            HorizontalOptions="Center" />

        <Label 
            Text="Bei Problemen: support@saveup.com"
            FontSize="18"
            TextColor="#555555"
            HorizontalOptions="Center" />

        <Button 
            Text="Zurück"
            FontSize="18"
            TextColor="White"
            BackgroundColor="#007BFF"
            CornerRadius="10"
            Padding="10,5"
            HorizontalOptions="Center"
            WidthRequest="150"
            Command="{Binding NavigateBackCommand}" />
    </VerticalStackLayout>
</ContentPage>