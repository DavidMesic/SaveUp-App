        <VerticalStackLayout>
            <Entry Placeholder="Kurzbeschreibung"
                   Text="{Binding Description}" />
            <Entry Placeholder="Preis"
                   Keyboard="Numeric"
                   Text="{Binding Price}" />
            <Button Text="Speichern"
                    Command="{Binding SaveProductCommand}" />
